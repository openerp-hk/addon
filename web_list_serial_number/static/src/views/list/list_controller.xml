<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web_list_serial_number.ListView" t-inherit="web.ListView" t-inherit-mode="primary">
        <xpath expr="//t[@t-set-slot='control-panel-create-button']/t" position="after">
            <t t-if="serialNumber.displayNumSwitch">
                <label class="switch">
                    <input type="checkbox" t-on-click="onNumSwitch" t-att-checked="serialNumber.numSwitch"/>
                    <span class="slider"/>
                </label>
            </t>
        </xpath>
        <xpath expr="//t[@t-component='props.Renderer']" position="replace">
            <t t-component="props.Renderer"
                list="model.root"
                serialNumber="serialNumber"
                activeActions="activeActions"
                archInfo="archInfo"
                allowSelectors="props.allowSelectors"
                editable="editable"
                onOpenFormView="onOpenFormView"
                openRecord.bind="openRecord"
                noContentHelp="props.info.noContentHelp"
                onAdd.bind="createRecord"
                onOptionalFieldsChanged.bind="onOptionalFieldsChanged"
                evalViewModifier.bind="evalViewModifier"
            />
        </xpath>
    </t>

</templates>