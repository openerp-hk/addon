<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="DingConfigSettings" model="ir.ui.view">
        <field name="name">钉钉参数</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="gmap">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">钉钉</span>
                        <div class="content-group">
                            <div class="mt16">
                                <label for="ding_app_key" string="APP Key"/>
                                <field name="ding_app_key" class="oe_inline"/>
                            </div>
                            <div class="mt16">
                                <label for="ding_app_secret" string="App Secret"/>
                                <field name="ding_app_secret" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>