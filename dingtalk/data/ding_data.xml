<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="ir_cron_hr_attendance" model="ir.cron">
            <field name="name">自动从钉钉获取考勤记录</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model.ding_auto_attendance()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall" />
            <field name="nextcall" eval="(DateTime.strptime('2019-08-12 00:00:00','%Y-%m-%d %H:%M:%S').date() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="priority">100</field>
        </record>
    </data>
</odoo>
