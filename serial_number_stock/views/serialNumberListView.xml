<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="inherit_stock_scrap_tree_view" model="ir.ui.view">
        <field name="name">inherit.stock.scrap.tree</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">serialNumberListView</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_vpicktree" model="ir.ui.view">
        <field name="name">inherit.stock.picking.tree</field>
