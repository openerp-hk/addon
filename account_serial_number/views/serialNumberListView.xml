<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="inherit_view_account_payment_tree" model="ir.ui.view">
        <field name="name">inherit.account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">serialNumberListView</attribute>
            </xpath>
        </field>
    </record>

        <record id="inherit_view_move_line_payment_tree" model="ir.ui.view">
        <field name="name">inherit.account.move.line.payment.tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">serialNumberListView</attribute>
            </xpath>
        </field>
    </record>

</odoo>